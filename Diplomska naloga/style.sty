\newcommand{\knjigaEnAvtor}[3]{{\sc #1}, {\it #2}, #3.}
\newcommand{\knjigaVecAvtorjev}[4]{{\sc #1} in {\sc #2}, {\it #3}. #4.}

\newcommand{\clanekVRevijiEnAvtor}[6]{{\sc #1}, {#2}. {\it #3} {#4} (#5) #6.}
\newcommand{\clanekVRevijiVecAvtorjev}[7]{{\sc #1} in {\sc #2}, {#3}. {\it #4} {#5} (#6) #7.}

\newcommand{\clanekVRevijiEnAvtorSprejetVObjavo}[3]{{\sc #1}, {#2}. {\it #3}, sprejeto v objavo.}
\newcommand{\clanekVRevijiVecAvtorjevSprejetVObjavo}[4]{{\sc #1} in {\sc #2}, {#3}. {\it #4}, sprejeto v objavo.}

\newcommand{\clanekVRevijiEnAvtorVTisku}[3]{{\sc #1}, {#2}. {\it #3}, v tisku.}
\newcommand{\clanekVRevijiVecAvtorjevVTisku}[4]{{\sc #1} in {\sc #2}, {#3}. {\it #4}, v tisku.}

\newcommand{\clanekVRevijiEnAvtorPoslanVObjavo}[3]{{\sc #1}, {#2}. {#3}, poslano v objavo.}
\newcommand{\clanekVRevijiVecAvtorjevPoslanVObjavo}[4]{{\sc #1} in {\sc #2}, {#3}. {#4}, poslano v objavo.}

\newcommand{\poglavjeVKnjigiEnAvtor}[6]{{\sc #1}, {#2}, v: {#3}, {\it #4}, {#5}, {#6}.}
\newcommand{\poglavjeVKnjigiVecAvtorjev}[7]{{\sc #1} in {\sc #2}, {#3}. V: {#4}, {\it #5}, {#6}, {#7}.}

\newcommand{\poglavjeVecAvtorjev}[6]{{\sc #1} in {\sc #2}, {#3}. V: {\it #4} {#5}, #6.}

\newcommand{\konferencniClanekEnAvtor}[5]{{\sc #1}, {#2}. V {\it #3}, {#4}, #5.}
\newcommand{\konferencniClanekVecAvtorjev}[6]{{\sc #1} in {\sc #2}, {#3}. V {\it #4}, {#5}, #6.}

\newcommand{\doktorskaDisertacija}[3]{{\sc #1}, {\it #2},\, {#3}.}

\newcommand{\spletniVirBrezAvtorja}[5]{{\it #1},\, {\texttt{#2}}. (Datum ogleda: {#3}.~{#4}.~{#5}.)}
